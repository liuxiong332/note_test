
<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |msg| %>
    <div><%= msg %></div>
  <% end %>
<% end %>

<%= form_for @article do |f| %>
<div>
  <%= f.label :title%>
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :text%>
  <%= f.text_field :text%>
</div>
<%= f.submit %>
<% end %>
